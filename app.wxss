/* 全局样式 */
page {
  background-color: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  color: #333;
}

.container {
  padding: 16rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: 500;
}

.card-header .subtitle {
  font-size: 24rpx;
  color: #999;
}

.card-header .more {
  color: #999;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: #14D173;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn image {
  width: 24rpx;
  height: 24rpx;
}

/* 通用按钮样式 */
.btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.primary-btn {
  background-color: #14D173;
  color: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 2rpx;
}

.menu-item .icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  color: #14D173;
}

.menu-item .title {
  flex: 1;
  font-size: 30rpx;
}

.menu-item .arrow {
  color: #999;
  font-size: 30rpx;
}

/* 图标默认样式 */
.icon-base {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
} 