.container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #000;
}

.camera-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.camera-controls {
  position: absolute;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
}

.left-controls {
  display: flex;
  align-items: center;
  width: 100rpx;
}

.center-controls {
  display: flex;
  justify-content: center;
  flex: 1;
}

.right-controls {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100rpx;
}

.control-btn {
  display: flex;
  justify-content: center;
  align-items: center;
}

.switch-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.switch-btn image {
  width: 40rpx;
  height: 40rpx;
}

.control-action-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 12rpx 24rpx;
}

.action-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
}

.capture-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.capture-btn .circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #14D173;
  border: 6rpx solid #fff;
}

.mode-selector {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 0 30rpx;
}

.mode-item {
  background-color: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.mode-item.active {
  background-color: #14D173;
  color: #fff;
}

.result-container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.photo-preview {
  width: 100%;
  height: 60vh;
  background-color: #f0f0f0;
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #14D173;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.analysis-result {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-details {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.result-item .label {
  color: #666;
}

.result-item .value {
  color: #333;
  font-weight: 500;
}

.result-controls {
  display: flex;
  padding: 20rpx 30rpx 40rpx;
}

.control-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.retake {
  background-color: #f0f0f0;
  color: #666;
}

.save {
  background-color: #14D173;
  color: #fff;
}

.ai-intro {
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  right: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
  padding: 20rpx;
  color: #fff;
}

.intro-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.intro-desc {
  font-size: 24rpx;
  line-height: 1.5;
} 