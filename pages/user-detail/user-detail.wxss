.container {
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 顶部操作栏 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
}

.edit-btn {
  background-color: #14D173;
  color: #ffffff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  font-weight: normal;
  margin: 0;
}

/* 用户信息列表 */
.user-info-list {
  background-color: #ffffff;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.value-container {
  display: flex;
  align-items: center;
}

.value {
  font-size: 32rpx;
  color: #999999;
  text-align: right;
}

.edit-icon {
  color: #cccccc;
  margin-left: 10rpx;
  font-size: 32rpx;
}

/* 输入框样式 */
.input-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.dialog-content {
  width: 80%;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-body {
  padding: 30rpx;
}

.dialog-input {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.dialog-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel-btn {
  border-right: 1rpx solid #f0f0f0;
  color: #999999;
}

.confirm-btn {
  color: #14D173;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  color: #333333;
} 